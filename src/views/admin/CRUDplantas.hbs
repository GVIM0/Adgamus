<div
  class="container-md w-50 p-3 bg-success-subtle text-emphasis-success border border-black rounded px-5 g-col-6"
>
  <h1 class="text-center p-5 fw-bold fs-3">CRUD plantas</h1>
  <form>
    <div class="mb-3">
      <label type="text" class="input-group text-center fw-bold mb-3">Tipos de
        cultivos</label>
      <select class="form-select" aria-label="Default select example">
        <option selected>Seleccionar</option>
        <option value="1">Uno</option>
        <option value="2">Dos</option>
        <option value="3">Tres</option>
      </select>
    </div>

    <div class="mb-3">
      <label type="text" class="input-group text-center fw-bold mb-3">Region
        Geografica</label>
      <select class="form-select" aria-label="Default select example">
        <option selected>Seleccionar</option>
        <option value="1">Uno</option>
        <option value="2">Dos</option>
        <option value="3">Tres</option>
      </select>
    </div>

    <div class="mb-3">
      <label
        type="text"
        class="input-group text-center fw-bold mb-3"
      >Seleccionar imagen</label>
      <div class="input-group mb-3">
        <input type="file" class="form-control" id="inputGroupFile02" />
        <label class="input-group-text" for="inputGroupFile02">Subir</label>
      </div>
    </div>

    <div class="input-group mb-3">
      <label type="text" class="input-group text-center fw-bold mb-3">Nombre
        científico</label>
      <span class="input-group-text">Nombre científico</span>
      <input
        type="text"
        aria-label="genero"
